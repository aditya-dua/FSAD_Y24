<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	
	<bean id="greeting" name="greeting" class="spring_intro.Greeting">
		<property name="message" value="Hello World from Aditya"></property>
	</bean>
	
	<bean id="address" name = "address" class= "spring_intro.Address">
		<property name="num" value ="123"></property>
		<property name="state" value ="Delhi"></property>
	</bean>
	
	<bean id="addressCons" name = "addressCons" class= "spring_intro.Address">
		<constructor-arg type="int" value="1234"></constructor-arg>
	</bean>


</beans>